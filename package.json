{
  "name": "octokit-plugin-hello-world",
  "version": "0.0.0-development",
  "description": "Simple Octokit.js plugin for demo purposes",
  "scripts": {
    "build": "pika build",
    "lint": "prettier --check '{src,test}/**/*' README.md package.json",
    "lint:fix": "prettier --write '{src,test}/**/*' README.md package.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage"
  },
  "repository": "https://github.com/gr2m/octokit-plugin-hello-world",
  "keywords": [
    "github",
    "api",
    "sdk",
    "toolkit"
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@octokit/core": "^2.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.7.0",
    "@pika/plugin-build-web": "^0.7.0",
    "@pika/plugin-ts-standard-pkg": "^0.7.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^13.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "semantic-release": "^16.0.0",
    "semantic-release-plugin-update-version-in-files": "^1.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  }
}
